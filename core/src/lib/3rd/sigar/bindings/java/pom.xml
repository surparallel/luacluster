                        <!--</goals>-->
                        <!--<configuration>-->
                            <!--<executable>cmake</executable>-->
                            <!--<workingDirectory>${basedir}/jni/build</workingDirectory>-->
                            <!--<arguments>-->
                                <!--<argument>..</argument>-->
                            <!--</arguments>-->
                        <!--</configuration>-->
                    <!--</execution>-->
                    <!--<execution>-->
                        <!--<id>sigar-jni-build</id>-->
                        <!--<phase>compile</phase>-->
                        <!--<goals>-->
